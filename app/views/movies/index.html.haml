-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table.table.table-striped#movies
  %thead
    %tr
      %th#title{:class => @title_css}= link_to "#{@title_glyph}Movie Title".html_safe, movies_path(key: 'title', asc: @last_column == 'title' ? @next_order : true ), id: 'title_header'
      %th#rating{:class => @rating_css}= link_to "#{@rating_glyph}Rating".html_safe, movies_path(key: 'rating', asc: @last_column == 'rating' ? @next_order : true ), id: 'rating_header'
      %th#release_date{:class => @release_css}= link_to "#{@release_glyph}Release Date".html_safe, movies_path(key: 'release_date', asc: @last_column == 'release_date' ? @next_order : true ), id: 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
